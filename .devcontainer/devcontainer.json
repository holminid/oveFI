{
  "name": "ove.fi",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" }
  },
  "postCreateCommand": "npm ci || npm i",
  "customizations": {
    "vscode": {
      "extensions": ["astro-build.astro-vscode","bradlc.vscode-tailwindcss"]
    }
  },
  "portsAttributes": {
    "4321": { "label": "Astro dev", "onAutoForward": "openBrowser" }
  },
  "forwardPorts": [4321]
}
